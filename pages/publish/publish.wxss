/* 下方选择部分 */
.item-box {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  height: 7vh;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-box>text {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  color: #1296db;
  /* font-weight: 600; */
}

.publish {
  margin: 20rpx;
}

.picker {
  font-size: 30rpx;
  color: #8a8a8a;
}