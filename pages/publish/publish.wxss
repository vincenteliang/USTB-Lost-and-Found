  height: 7vh;
  width: 90vw;
  margin: auto;
  padding: 0 10rpx;
  font-weight: 700;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail {
  /* border: 1px solid black; */
  width: 90vw;
  margin: auto;
  padding: 10rpx;
  min-height: 17vh;
}

/* 上传图片部分 */
/* 上传图片部分 */
/* 上传图片部分 */
.post-imgList {
  display: flex;
  margin-bottom: 2vh;
  padding: 16rpx 3vh;
  height: 10vh;
  background-color: #fff;
}

.img {
  position: relative;
  width: 9vh;
  height: 9vh;
}

.deleteImg {
  position: absolute;
  right: 0;
  top: 0;
  width: 3vh;
  height: 3vh;
  /* background-color: royalblue; */
}

.deleteImg-x {
  position: relative;
  width: 3vh;
  height: 3vh;
  border-radius: 50%;
  margin: 0;
  padding: 0;
}

.add-img-div {
  width: 9vh;
  height: 9vh;
  border: 2px dashed #a09a9a;
  margin-left: 10px;
}

.add-img-image {
  display: block;
  margin: 2vh;
  width: 5vh;
  height: 5vh;
}

.image-upload {
  display: block;
  width: 9vh;
  height: 9vh;
}

