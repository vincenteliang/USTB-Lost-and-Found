.container {
  background-color: #f0f0f0;
}

.header {
  border: 0;
  height: 24vh;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: #fff; */
  margin-bottom: 30rpx;
}

.userinfo-avatar {
  width: 15vh;
  height: 15vh;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #1296db;
}

.footer .image {
  background-color: white;
  width: 100vw;
  height: 40vw;
}

.footer image {
  width: 100%;
  height: 100%;
}